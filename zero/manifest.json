{
    "manifest_version": 3,
    "name": "zero",
    "version": "1.0",
    "description": "zero is a simple extension",
    "permissions": [
        "contextMenus",
        "webRequest",
        "sidePanel"
    ],
    "content_scripts": [
        {
            "js": [
                "js/content_scripts.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "side_panel": {
        "default_path": "./html/side_panel.html",
        "width": 200,
        "height": 200
    },
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}