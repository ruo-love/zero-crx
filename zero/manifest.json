{
    "manifest_version": 3,
    "name": "zero",
    "version": "1.0",
    "description": "zero is a simple extension",
    "permissions": [
        "contextMenus",
        "webRequest",
        "sidePanel",
        "commands",
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "js": [
                "js/content_scripts.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "commands": {
        "open_side_panel": {
            "suggested_key": "Alt+Q",
            "description": "open side_panel",
            "global": true
        }
    },
    "side_panel": {
        "default_path": "./side_panel/index.html"
    },
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}